{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build:esm": {
      "dependsOn": ["^build:esm"],
      "cache": false
    },
    "build:cjs": {
      "dependsOn": ["^build:cjs"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
