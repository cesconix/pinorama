{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules/**", "**/dist"]
  }
}
